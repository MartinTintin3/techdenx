<!DOCTYPE html>
<html lang="en">
<%- await include('partials/head', { fullTitle, metaDescription, robots }) %>
<body>
  <%- await include('partials/header', { nav, meta }) %>

  <main id="main">
    <section class="section">
      <div class="container">
        <div class="section-header">
          <div class="section-label">
            <span class="section-dot" aria-hidden="true"></span>
            <span class="section-label-text">FAQ</span>
          </div>
          <h1 class="page-headline"><%= faq.headline %></h1>
        </div>

        <div class="faq-list">
          <% faq.items.forEach((item, index) => { %>
            <details class="faq-item" id="faq-<%= index %>">
              <summary class="faq-question">
                <span><%= item.q %></span>
                <span class="faq-icon" aria-hidden="true">+</span>
              </summary>
              <div class="faq-answer">
                <p><%= item.a %></p>
              </div>
            </details>
          <% }) %>
        </div>

        <div class="text-center mt-3">
          <p class="text-muted">Still have questions?</p>
          <a href="/contact/" class="btn btn-secondary">Contact Us</a>
        </div>
      </div>
    </section>
  </main>

  <%- await include('partials/footer', { nav, meta }) %>
  <script src="/assets/site.js"></script>
</body>
</html>
