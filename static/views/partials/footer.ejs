        <h4>Pages</h4>
        <ul>
          <% nav.forEach(item => { %>
            <li><a href="<%= item.href %>"><%= item.label %></a></li>
          <% }) %>
        </ul>
      </div>
      <div class="footer-links">
        <h4>Legal</h4>
        <ul>
          <li><a href="/privacy/">Privacy Policy</a></li>
          <li><a href="/terms/">Terms of Service</a></li>
          <li><a href="/refund/">Refund Policy</a></li>
        </ul>
      </div>
    </div>
